{
    "image": "ghcr.io/onslowcollege/swifttemplate:latest",
    "customizations": {
        "vscode": {
            "extensions": [
                "sswg.swift-lang",
                "vknabel.vscode-apple-swift-format",
                "vadimcn.vscode-lldb",
                "eamodio.gitlens",
                "GitHub.vscode-pull-request-github",
                "yzhang.markdown-all-in-one",
                "hediet.vscode-drawio",
                "oderwat.indent-rainbow",
                "usernamehw.errorlens",
                "aaron-bond.better-comments",
                "vsls-contrib.gitdoc",
                "danielgjackson.auto-dark-mode-windows",
                "seunlanlege.action-buttons"
            ],
            "settings": {
                "apple-swift-format.path": [
                    "/root/.mint/bin/swift-format"
                ],
                "gitlens.showWhatsNewAfterUpgrades": false,
                "gitlens.showWelcomeOnInstall": false,
                "editor.wordWrap": "on",
                "editor.inlayHints.enabled": "off",
                "editor.fontSize": 16,
                "editor.rulers": [
                    120
                ],
                "editor.tokenColorCustomizations": {
                    "textMateRules": [
                        {
                            "scope": "comment",
                            "settings": {
                                "fontStyle": "italic"
                            }
                        }
                    ]
                },
                "gitdoc.commitValidationLevel": "none",
                "gitdoc.enabled": true,
                "workbench.colorTheme": "Default Light Modern",
                "workbench.preferredDarkColorTheme": "Default Dark Modern",
                "workbench.preferredLightColorTheme": "Default Light Modern",
                "actionButtons": {
                    "commands": [
                        {
                            "cwd": "${workspaceFolder}",
                            "name": "$(triangle-right) Run Swift file",
                            "color": "green",
                            "singleInstance": true,
                            "command": "swift ${file}" // This is executed in the terminal.
                        },
                        {
                            "cwd": "{workspaceFolder}",
                            "name": "Format file",
                            "color": "blue",
                            "useVsCodeApi": true,
                            "command": "editor.action.formatDocument"
                        },
                        {
                            "name": "New Terminal",
                            "useVsCodeApi": true,
                            "command": "workbench.action.terminal.newInActiveWorkspace"
                        },
                        {
                            "name": "Kill all Terminals",
                            "color": "red",
                            "useVsCodeApi": true,
                            "command": "workbench.action.terminal.killAll"
                        }
                    ],
                    "defaultColor": "none",
                    "reloadButton": "â†»",
                    "loadNpmCommands": false
                }
            }
        }
    },
    "postStartCommand": "bash -c git remote set-url origin 'https://github.com/OnslowCollege/$(basename $(pwd))'"
}
